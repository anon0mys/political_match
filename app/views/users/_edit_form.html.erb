<%= form_for @user, html: {class: 'signup-form'} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.select :state,
          state_list,
          {},
          { class: 'form-control', include_blank: true } %>
  </div>

  <div class="password-reset">
    <button class="btn btn-primary password-reset-button" type="button">
      Reset Your Password
    </button>
  </div>

  <%= f.submit 'Update', class: 'btn btn-primary'%>

<% end %>
