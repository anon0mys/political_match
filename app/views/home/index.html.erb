<!DOCTYPE html>
<html>
  <head>
    <title>PoliticalMatch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% unless flash.empty? %>
      <div class="flash">
        <% flash.each do |type, message| %>
          <%= content_tag :div, sanitize(message), class: type %>
        <% end %>
      </div>
    <% end %>
    <header class='home-header'>
      <div class="logo-group">
        <div class="logo">
          <%= link_to image_tag('logo'), root_path %>
        </div>
        <div class="home-log-in">
          <% if current_user %>
            <%= link_to 'Dashboard', dashboard_path %>
          <% else %>
            <%= link_to 'Log In', login_path %>
          <% end %>
        </div>
      </div>
      <div class="center-group">
        <h1>Political Match</h1>
        <%= button_to 'Sign Up', sign_up_path, method: :get, class: 'btn btn-primary' %>
      </div>
    </header>

    <div class="about-us">
      <h2>About Political Match</h2>
    </div>
    <div class="about-profile">
      <h2>Your Political Profile</h2>
    </div>
    <footer class="main-footer">
      <p>Political Match</p>
    </footer>
  </body>
</html>
